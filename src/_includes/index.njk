---
layout: base.njk
---
<ul>
  {% for post in search.pages("post") %}
  <li class="mb-8">
    <a href="{{post.data.url}}" class="text-2xl font-bold">
    {{ post.data.title }}
    </a>
    <div class="text-gray-500">
      {{ post.data.created }}
    </div>
    <div class="text-gray-800 mt-2">
      {{ post.data.excerpt or post.data.summary}}
    </div>
  </li>
  {% endfor %}
</ul>